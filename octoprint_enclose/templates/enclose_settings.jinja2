<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Hostname') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.enclose.hostname">
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Enclosure On/Off GPIO Button Pin</label>
        <div class="controls">
            <input type="number" min="0" class="input-mini"
                   data-bind="value: settings.plugins.enclose.enclosureGPIOButtonPin">
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Power On/Off GPIO Button Pin</label>
        <div class="controls">
            <input type="number" min="0" class="input-mini"
                   data-bind="value: settings.plugins.enclose.powerGPIOButtonPin">
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Power Relay GPIO Pin</label>
        <div class="controls">
            <input type="number" min="0" class="input-mini" data-bind="value: settings.plugins.enclose.powerGPIORelayPin">
        </div>
    </div>

</form>
